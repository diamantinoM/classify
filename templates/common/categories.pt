<div metal:use-macro="load: ../shared/_layout.pt">

  <div metal:fill-slot="title" tal:omit-tag="True">
    <title> Categorias | Classify</title>
  </div>

  <div metal:fill-slot="content" tal:omit-tag="True">

    <div
      class="page_banner bg_cover"
      style="background-image: url(/public/assets/images/page-banner.jpg)">
      <div class="container">
        <div class="page_banner_content">
          <h3 class="title">Categorias</h3>
          <ul class="breadcrumb">
            <li><a href="/home/index">Home</a></li>
            <li>Categorias</li>
          </ul>
        </div>
      </div>
    </div>

    <!--====== HEADER PART ENDS ======-->

    <!--====== CATEGORIS PAGE PART START ======-->

    <section class="categories_page pt-70 pb-120">
      <div class="container">
        <div
          class="categories_top_bar d-flex align-items-center justify-content-between pb-30"
        >
          <div class="categories_story mt-50">
            <select>
              <option value="0">Ordenar nº Anúncios</option>
              <option value="1">Ordenar A-Z</option>
              <option value="1">Ordenar Z-A</option>
            </select>
          </div>
          <div class="categories_tab_menu mt-50">
            <ul class="nav" id="myTab" role="tablist">
              <li class="nav-item">
                <a
                  class="active"
                  id="grid-tab"
                  data-toggle="tab"
                  href="#grid"
                  role="tab"
                  aria-controls="grid"
                  aria-selected="true"
                >
                  <i class="fal fa-th"></i>
                </a>
              </li>
              <li class="nav-item">
                <a
                  id="list-tab"
                  data-toggle="tab"
                  href="#list"
                  role="tab"
                  aria-controls="list"
                  aria-selected="false"
                >
                  <i class="fal fa-th-list"></i>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="tab-content" id="myTabContent">
          <div
            class="tab-pane fade show active"
            id="grid"
            role="tabpanel"
            aria-labelledby="grid-tab"
          >
            <div class="row">
              <__repeat tal:repeat="category all_categories" tal:omit-tag="True">
                
                <div class="col-lg-3 col-6">
                  <div class="single_categories text-center mt-30">
                    <div class="categories_icon">
                      <i class="${category.category_icon}"></i>
                    </div>
                    <div class="categories_content">
                      <h5 class="title">${category.category_name}</h5>
                      <p>${category.count_total_ads} Anúncios</p>
                    </div>
                    <a href="/products/product"></a>
                  </div>
                </div>
                
              </__repeat>
            </div>
          </div>
          <div
            class="tab-pane fade"
            id="list"
            role="tabpanel"
            aria-labelledby="list-tab"
          >
            <div class="categories_list">
              <__repeat tal:repeat="category all_categories" tal:omit-tag="True">
                <div class="single_list mt-30">
                  <div class="list_title_icon d-flex align-items-center">
                    <div class="categories_icon">
                      <i class="${category.category_icon}"></i>
                    </div>
                    <div class="list_title media-body">
                      <h5 class="title">${category.category_name}</h5>
                    </div>
                  </div>
                  <div class="categories_list_wrapper">
                    <div class="row">
                      <div class="col-lg-3 col-sm-6">
                        <ul class="list">
                          <__repeat tal:repeat="subcategory category.subcategories" tal:omit-tag="True">
                            <li><a href="/products/product">${subcategory.subcategory_name}</a></li>
                          </__repeat>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </__repeat>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!--====== CATEGORIS PAGE PART ENDS ======-->

  </div>
</div>