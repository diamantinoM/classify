<div metal:use-macro="load: ../shared/_layout.pt">
  <div metal:fill-slot="title" tal:omit-tag="True">
    <title> Definições de Perfil | Classify</title>
  </div>
  <div metal:fill-slot="content" tal:omit-tag="True">

    <div
      class="page_banner bg_cover"
      style="background-image: url(/public/assets/images/page-banner.jpg)">
      <div class="container">
        <div class="page_banner_content">
          <h3 class="title">Definições de Perfil</h3>
          <ul class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li>Definições de Perfil</li>
          </ul>
        </div>
      </div>
    </div>

    <!--====== HEADER PART ENDS ======-->

    <!--====== PROFILE SETTINGS PART START ======-->

    <section class="profile-settings_page pt-70 pb-120">
      <div class="container">
        <div class="row">
          <div metal:use-macro="load: ../shared/_user_sidebar.pt">
          
          </div>
          <div class="col-lg-9">
            <div class="post_form mt-50">
              <div class="post_title">
                <h5 class="title">Definições de Perfil</h5>
              </div>
              <form action="/user/profile-settings" method="POST">
                <div class="row">
                  <div class="col-md-6">
                    <div class="single_form">
                      <input type="text" placeholder="Nome" name="username" value="${name}"/>
                    </div>
                  </div>
                  <div class="post_upload_file">
                    <label for="upload">
                      <span>Arrasta imagens aqui</span>
                      <span>Ou</span>
                      <span class="main-btn">Seleciona Imagens</span>
                      <span>Máximo tamanho de upload: 500 KB</span>
                      <input type="file" name="files" id="upload" accept="image/jpg,/image/png" multiple="multiple"/>
                    </label>
                  </div>
                  <div class="col-md-6">
                    <div class="single_form">
                      <input type="email" placeholder="Endereço de Email" name="email" value="${email}"/>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="single_form">
                      <input type="text" placeholder="Número Telemóvel" name="phone_number" value="${phone_number}"/>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="single_form">
                      <input type="text" placeholder="Data de Nascimento" name="birth_date" value="${birth_date}"/>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="single_form">
                      <button class="main-btn">Confirmar Alterações</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!--====== PROFILE SETTINGS PART ENDS ======-->
  </div>
</div>