<div metal:use-macro="load: ../shared/_layout.pt">
  <div metal:fill-slot="content" tal:omit-tag="True">

    <div
      class="page_banner bg_cover"
      style="background-image: url(/public/assets/images/page-banner.jpg)">
      <div class="container">
        <div class="page_banner_content">
          <h3 class="title">Sign In</h3>
          <ul class="breadcrumb">
            <li><a href="/home/index">Home</a></li>
            <li>Sign In</li>
          </ul>
        </div>
      </div>
    </div>

    <!--====== HEADER PART ENDS ======-->

    <!--====== SIGN IN PART START ======-->

    <section class="sign_in_area pt-120 pb-120">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="sign_in_form">
              <div class="sign_title">
                <h5 class="title">Sign In Now</h5>
              </div>
              <form action="/auth/sign-in" method="POST">
                <div class="sign_form_wrapper">
                  <div class="single_form">
                    <input type="email" placeholder="Email" name="email" value="${email}"/>
                    <i class="fal fa-at"></i>
                  </div>
                  <div class="single_form">
                    <input type="password" placeholder="Password" name="password" value="${password}"/>
                    <i class="fal fa-key"></i>
                  </div>
                  <div class="single_form d-sm-flex justify-content-between">
                    <div class="sign_checkbox">
                      <input type="checkbox" id="checkbox" />
                      <label for="checkbox"></label>
                      <span>Keep me logged in</span>
                    </div>
                    <div class="sign_forgot">
                      <a href="#">Forgot Password?</a>
                    </div>
                  </div>
                  <div class="single_form">
                    <button class="main-btn">Sign In</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!--====== SIGN IN PART ENDS ======-->

  </div>
</div>