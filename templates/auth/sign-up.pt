<div metal:use-macro="load: ../shared/_layout.pt">
  <div metal:fill-slot="title" tal:omit-tag="True">
    <title> Registar | Classify</title>
  </div>
  <div metal:fill-slot="content" tal:omit-tag="True">

    <div
      class="page_banner bg_cover"
      style="background-image: url(/public/assets/images/page-banner.jpg)">
      <div class="container">
        <div class="page_banner_content">
          <h3 class="title">Sign up</h3>
          <ul class="breadcrumb">
            <li><a href="/home/index">Home</a></li>
            <li>Sign up</li>
          </ul>
        </div>
      </div>
    </div>

    <!--====== HEADER PART ENDS ======-->

    <!--====== SIGN IN PART START ======-->

    <section class="sign_in_area pt-120 pb-120">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="sign_in_form">
              <div class="sign_title">
                <h5 class="title">Registe-se agora</h5>
              </div>
              <form action="/auth/sign-up" method="POST">
                <div class="sign_form_wrapper">
                  <div class="single_form">
                    <input type="text" placeholder="Username" name="username"/>
                    <i class="fal fa-user"></i>
                  </div>
                  <div class="single_form">
                    <input type="email" placeholder="Email" name="email"/>
                    <i class="fal fa-envelope"></i>
                  </div>
                  <div class="single_form">
                    <input type="date" placeholder="dd/mm/yyyy" name="birth-date" min="${min_date}" max="${max_date}"/>
                    <i class="fal fa-calendar"></i>
                  </div>
                  <div class="single_form">
                    <input type="text" placeholder="+351 123 456 789" name="phone-number"/>
                    <i class="fal fa-phone"></i>
                  </div>
                  <div class="single_form">
                    <input type="password" placeholder="Senha" name="password"/>
                    <i class="fal fa-key"></i>
                  </div>
                  <div class="single_form">
                    <input type="password" placeholder="Confirmar senha" name="confirm-password"/>
                    <i class="fal fa-key"></i>
                  </div>
                  <div class="single_form">
                    <div class="sign_checkbox">
                      <input type="checkbox" id="checkbox" />
                      <label for="checkbox"></label>
                      <span
                        >Concordo com os Termos e Condições de Serviço.</span
                      >
                    </div>
                  </div>
                  <div class="single_form">
                    <button class="main-btn" style="width: 100%;">Registar</button>
                  </div>
                  <div class="sign_forgot" style="text-align: center; margin-top: 1rem;">
                      <a href="/auth/sign-in" style="color: #ff4367;">Já possui conta? Faça login.</a>
                    </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!--====== SIGN IN PART ENDS ======-->

  </div>
</div>